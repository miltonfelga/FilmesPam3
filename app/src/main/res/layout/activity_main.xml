<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/fundo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Adicionar novo filme"
            android:textSize="22sp"
            android:textColor="@color/titulo" />

        <EditText
            android:id="@+id/txtNomeNovoFilme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entre com o nome do filme"
            android:backgroundTint="@color/titulo"
            android:textColorHint="@color/titulo"
            android:textColor="@color/titulo"/>

        <Button
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:text="selecione a imagem do filme"
            android:textColor="@color/titulo"
            android:background="#C4C4C4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="6dp"
            android:text="Selecione o genero"
            android:textColor="@color/titulo" />

        <Spinner
            android:id="@+id/spnGeneros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/generos"
            android:background="@color/titulo" />

        <EditText
            android:id="@+id/txtNovoLançamentoFilme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entre com a data de lançamento"
            android:backgroundTint="@color/titulo"
            android:textColorHint="@color/titulo"
            android:textColor="@color/titulo"/>

        <EditText
            android:id="@+id/txtNovoNotaFilme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entre com a nota"
            android:backgroundTint="@color/titulo"
            android:textColorHint="@color/titulo"
            android:textColor="@color/titulo"/>

        <EditText
            android:id="@+id/txtNovoSinopseFilme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entre com a sinopse"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:backgroundTint="@color/titulo"
            android:textColorHint="@color/titulo"
            android:textColor="@color/titulo"/>

        <Button
            android:id="@+id/btnAdicionarfilme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar filme"
            android:textColor="@color/titulo"
            android:background="#C4C4C4"/>

        <TextView
            android:id="@+id/lblVisualizaFilme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Visualizar Filme"
            android:textStyle="bold"
            android:textColor="@color/titulo" />

    </LinearLayout>
</RelativeLayout>
